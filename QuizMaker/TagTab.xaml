<Page x:Class="QuizMaker.TagTab" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:QuizMaker" mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="500" Title="TagTab" Background="White">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Style="{StaticResource Title}">
            Tag Manager
        </Label>

        <ListView Grid.Row="1" x:Name="TagListView" Margin="20,10" HorizontalContentAlignment="Stretch">

        </ListView>

        <WrapPanel Grid.Row="2" Margin="20,0,20,10" HorizontalAlignment="Right">
            <Button IsEnabled="{Binding ElementName=TagListView, Path=SelectedItems.Count}" Padding="10,3" Margin="0,0,5,0" Click="OnRemoveSelectedTag">Remove Selected</Button>
            <Button Padding="10,3" Margin="5,0,0,0" Click="OnAddNewTag">Create New Tag</Button>
        </WrapPanel>


    </Grid>
</Page>
